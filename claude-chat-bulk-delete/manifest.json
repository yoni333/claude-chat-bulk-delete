{
  "manifest_version": 3,
  "name": "Claude Chat Bulk Delete",
  "version": "1.0.0",
  "description": "Bulk delete chats on claude.ai",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
